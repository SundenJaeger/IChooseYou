<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.android.ichooseyou.activity.FeaturesListActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="I CHOOSE YOU"
            app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:titleTextColor="#D20103"
            android:fontFamily="@font/poppins_bold" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Basic Randomizers"
                android:textColor="#212121"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/coin_toss_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:text="Coin Toss"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_coin"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconSize="24dp"
                        app:iconTint="#D20103" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="#EEEEEE" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/dice_roll_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:text="Dice Roll"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_dicez"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconSize="24dp"
                        app:iconTint="#D20103" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="#EEEEEE" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/number_generator_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:text="Number Generator"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_numbers"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconSize="24dp"
                        app:iconTint="#D20103" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Advanced Randomizers"
                android:textColor="#212121"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/list_picker_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:text="List Picker"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_list"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconSize="24dp"
                        app:iconTint="#D20103" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="#EEEEEE" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/wheel_of_names_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:text="Wheel of Names"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_wheel"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconSize="24dp"
                        app:iconTint="#D20103" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="#EEEEEE" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/team_picker_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:text="Team Picker"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_teams"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconSize="24dp"
                        app:iconTint="#D20103" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Fun Randomizers"
                android:textColor="#212121"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/color_picker_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:text="Color Picker"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_color"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconSize="24dp"
                        app:iconTint="#D20103" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="#EEEEEE" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/decision_maker_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:gravity="start|center_vertical"
                        android:paddingStart="16dp"
                        android:text="Decision Maker"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        app:icon="@drawable/ic_decision"
                        app:iconGravity="textStart"
                        app:iconPadding="16dp"
                        app:iconSize="24dp"
                        app:iconTint="#D20103" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="#EEEEEE" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>